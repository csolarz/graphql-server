# GraphQL schema example
#
# https://gqlgen.com/getting-started/



type User {
  id: ID!
  name: String!
}

type Payment {
  id: ID!
  amount: Float!
  user: User!
}

input NewPayment {
  amount: Float!
  user_id: String!
}

type Query {
  payments: [Payment!]!
  users: [User!]!
}

type Mutation {
  create_payment(input: NewPayment!): Payment!
}
